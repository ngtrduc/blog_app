<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
			<%= image_tag(@user.avatar.url(:thumb), class: "img-circle avatar",height: "50", width: "50") %>
			<%= @user.name %>
			</h1>
		</section>
		<%= render 'follow_form' if logged_in? %>
	</aside>
	<div class="col-md-8">

		<% if @user.posts.any? %>
			<h3>Posts (<%= @user.posts.count %>)</h3>
			<ol class="microposts">
			<%= render @posts %>
			</ol>
			<%= will_paginate @posts %>
		<% end %>
	</div>
</div>